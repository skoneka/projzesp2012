<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ToggleButton
                android:id="@+id/trigger_location_enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="trigger_location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Location"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showMap"
                android:text="Map" />

            <TextView
                android:id="@+id/label_location_example_param_latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text=" latitude " />

            <TextView
                android:id="@+id/trigger_location_param_latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />

            <TextView
                android:id="@+id/label_location_example_param_longtitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text=" longtitude " />

            <TextView
                android:id="@+id/trigger_location_param_longtitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/label_location_example_param_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="trigger_example_param_area" />

            <EditText
                android:id="@+id/trigger_location_param_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@drawable/i1x1" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@drawable/i1x1black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ToggleButton
                android:id="@+id/trigger_date_enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showDatePickerFrom"
                android:text="From" />

            <TextView
                android:id="@+id/trigger_date_param_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showDatePickerTo"
                android:text="To" />

            <TextView
                android:id="@+id/trigger_date_param_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/trigger_date_param_day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 1" />

            <CheckBox
                android:id="@+id/trigger_date_param_day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 2" />

            <CheckBox
                android:id="@+id/trigger_date_param_day3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/trigger_date_param_day4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 4" />

            <CheckBox
                android:id="@+id/trigger_date_param_day5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 5" />

            <CheckBox
                android:id="@+id/trigger_date_param_day6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/trigger_date_param_day7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 7" />
        </LinearLayout>
        <!-- spacer -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@drawable/i1x1" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@drawable/i1x1black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ToggleButton
                android:id="@+id/trigger_wifi_enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="trigger_wifi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="WiFi"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/label_trigger_wifi_param_ssid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="SSID" />

            <EditText
                android:id="@+id/trigger_wifi_param_ssid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>